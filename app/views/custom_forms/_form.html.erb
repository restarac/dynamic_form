      <h2><%= pluralize(custom_form.errors.count, "error") %> prohibited this custom_form from being saved:</h2>

      <ul>
      <% custom_form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :sub_category_id %><br>
    <%= f.collection_select(:sub_category_id, SubCategory.all, :id, :name )%>
  </div>
