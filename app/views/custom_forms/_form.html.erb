    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="actions">
    <%= link_to '<- Back to list', custom_forms_path, {class: "btn btn btn-info", role: "button"} %>
    <%= captured %>
  </div>
<% end %>